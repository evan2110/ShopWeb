<!-- customer login start -->
<div class="customer_login">
    <div class="container">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-12 col-md-12">
                <div class="account_form register">
                    <h2>Connect with supporters</h2>
                    <form method="post" asp-action="ForgetPass" asp-controller="ForgetPass">
                        <p>
                            <label>Number phone  <span>*</span></label>
                            <input name="Phone" required type="text">
                        </p>
                        <div class="flex items-center justify-between">
                            @if (ViewBag.status == "Number phone can't found")
                            {
                                <label style="color:red">@ViewBag.status</label>
                            }
                            @if (ViewBag.status == "Your new password was sent")
                            {
                                <label style="color:green">@ViewBag.status</label>
                            }
                        </div>
                        <div class="login_submit">
                            <button type="submit">Send</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>