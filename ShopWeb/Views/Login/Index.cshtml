<!-- customer login start -->
<div class="customer_login">
    <div class="container">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form">
                    <h2>login</h2>
                    <form method="post" asp-action="Login">
                        <p>
                            <label>Username or email <span>*</span></label>
                            <input name="Email" type="text">
                        </p>
                        <p>
                            <label>Passwords <span>*</span></label>
                            <input name="Password" type="password">
                        </p>
                        <div class="flex items-center justify-between">
                            @if (ViewBag.ErrorMessageLogin != null)
                            {
                                <label style="color:red">@ViewBag.ErrorMessageLogin</label>
                            }
                        </div>
                        <div class="login_submit">
                            <a href="/ForgetPass">Lost your password?</a>
                            <label for="remember">
                                <input id="remember" type="checkbox">
                                Remember me
                            </label>
                            <button type="submit">login</button>

                        </div>

                    </form>
                </div>
            </div>
            <!--login area start-->
            <!--register area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form register">
                    <h2>Register</h2>
                    <form method="post" asp-action="Register" asp-controller="Register">
                        <p>
                            <label>Email address  <span>*</span></label>
                            <input name="Email" required type="email">
                        </p>
                        <p>
                            <label>Passwords <span>*</span></label>
                            <input name="Password" required type="password">
                        </p>
                        <div class="flex items-center justify-between">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <label style="color:red">@ViewBag.ErrorMessage</label>
                            }
                            @if (ViewBag.SuccessMessage != null)
                            {
                                <label style="color:green">@ViewBag.SuccessMessage</label>
                            }
                        </div>
                        <div class="login_submit">
                            <button type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>
<!-- customer login end -->